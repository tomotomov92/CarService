@model CarService.Models.ScheduleModel

@{
    ViewData["Title"] = "Edit Schedule";
}

<h1>Edit Schedule</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleStartTime" class="control-label"></label>
                <input asp-for="ScheduleStartTime" class="form-control" />
                <span asp-validation-for="ScheduleStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleEndTime" class="control-label"></label>
                <input asp-for="ScheduleEndTime" class="form-control" />
                <span asp-validation-for="ScheduleEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" asp-items="Model.EmployeeOptions"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
